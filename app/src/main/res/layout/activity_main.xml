<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#ff20"
        android:textSize="50dp"
        android:gravity="center"
        android:text="Số Ngẫu Nhiên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtSoMin"
        android:layout_marginTop="20dp"
        android:maxLength="3"
        android:textColor="#0022FF"
        android:inputType="number"
        android:gravity="left"
        android:hint="Nhập Số Min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtSoMax"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:gravity="left"
        android:hint="Nhập Số Max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnAddrang"
        android:layout_marginTop="20dp"
        android:background="#FFC107"
        android:textAllCaps="false"
        android:text="Add range"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnReset"
        android:layout_marginTop="20dp"
        android:background="#FFC107"
        android:textAllCaps="false"
        android:text="Reset"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnRandom"
        android:layout_marginTop="20dp"
        android:background="#FFC107"
        android:textAllCaps="false"
        android:text="Random"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvResult"
            android:text=""
            android:maxLines="5"
            android:textSize="30dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>